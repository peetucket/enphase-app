<h3><%= display_date(Time.now) %></h3>
<% unless @status == 'normal' && @inverters_ok%>
    <div class="alert alert-danger" role="alert">
        ALERT: System is reporting an error.
    </div>
<% end %>
<table class="table table-striped">
  <thead class="thead-light">
    <tr>
        <th scope="col">Current Power</th>
        <th scope="col">Total Today</th>
        <th scope="col">System status</th>
        <th scope="col">All inverters normal</th>
        <th scope="col">Last report</th>
    </tr>
  </thead>
  <tbody>
    <tr>
       <td><%= to_kw(@result["current_power"])%> kW</td>
       <td><%= to_kw(@result["energy_today"])%> kW</td>
       <td class="<%= status_class(@status)%>"><%= @status %></td>
       <td class="<%= status_class(@inverters_ok)%>"><%= @inverters_ok %></td>
       <td><%= display_date(Time.parse(@result["last_report_at"])) %></td>
    </tr>
  </tbody>
</table>

<%= render partial: 'inverters' %>
